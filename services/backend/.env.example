# OpenClaw Gateway connection (required for agent automation)
# Get your token from: openclaw gateway status
GATEWAY_URL=ws://127.0.0.1:18789
GATEWAY_TOKEN=your_gateway_token_here

# Auth
# Set DISABLE_AUTH=true for local development (no GitHub OAuth needed)
DISABLE_AUTH=true
SESSION_SECRET=change-me-in-production

# GitHub OAuth (required when DISABLE_AUTH=false)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
ALLOWED_ORG=

# Slack (optional — enables Send to Slack on Reports page)
# Get your bot token from: api.slack.com/apps → OAuth & Permissions
SLACK_BOT_TOKEN=

# Server
PORT=3001
NODE_ENV=development

# Database (SQLite by default for development)
# Uncomment for PostgreSQL in production:
# DATABASE_URL=postgresql://user:password@localhost/mission_clawtrol

# Frontend URL (for CORS)
BACKEND_URL=http://localhost:3001
PUBLIC_URL=http://localhost:5173

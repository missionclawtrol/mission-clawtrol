# ============================================
# Copy to .env.production and fill in values:
#   cp .env.production.example .env.production

# --- Database ---
# PostgreSQL connection string (format: postgresql://user:password@host:port/database)
DATABASE_URL=postgresql://mission_clawtrol:changeme@postgres:5432/mission_clawtrol

# PostgreSQL password (used by docker-compose for database setup)
POSTGRES_PASSWORD=changeme

# --- Authentication ---
# GitHub OAuth App credentials
# Create at: https://github.com/settings/developers
# Authorization callback URL: https://yourdomain.com/api/auth/callback
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Session signing secret (generate with: openssl rand -hex 32)
SESSION_SECRET=

# Restrict login to members of a specific GitHub organization (optional)
# Leave empty to allow any GitHub user
ALLOWED_ORG=

# --- OpenClaw Gateway ---
# WebSocket connection to OpenClaw Gateway for approval queue + agent monitoring
GATEWAY_URL=ws://gateway:18789
GATEWAY_TOKEN=

# --- Server Configuration ---
# Backend API port
PORT=3001

# Node environment
NODE_ENV=production

# Public URLs (used for OAuth redirects and CORS)
# Update these to match your actual domain
PUBLIC_URL=https://yourdomain.com
PUBLIC_API_URL=https://api.yourdomain.com

# --- Optional Settings ---
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=false
